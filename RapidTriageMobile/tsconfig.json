{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@components/*": ["src/ui/components/*"],
      "@screens/*": ["src/ui/screens/*"],
      "@navigation/*": ["src/ui/navigation/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@assets/*": ["assets/*"]
    },
    "types": ["react-native-dotenv"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".env"]
}
